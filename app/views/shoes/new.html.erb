<h1>Shoe Inventory</h1>

<h1>Add A Shoe To Our Collection</h1>
  <%= form_tag "/shoes", method: "post" do %>
   <div>
    
   <div class="form-group">
     Name: <input type="text" class="form-control" name="name">
    </div>
   <div>

   <div class="form-group">
     Price: <input type="text" class="form-control" name="price">
    </div>
   <div>
  
   <div class="form-group">
     Image: <input type="url" class="form-control" name="image">
    </div>
   <div>
     
   <div class="form-group">
     Description: <input type="text" class="form-control" name="description">
    </div>
   <input type="submit" value="Add New Shoe">
 
  <% end %>
<br>
<br>
<a href="/shoes">Back to the Home page</a>