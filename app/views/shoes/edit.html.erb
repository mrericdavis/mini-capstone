<h1>Edit Shoe</h1>
  <%= form_tag "/shoes/" + @shoe.id.to_s, method: "patch" do %>
   <div>
  
   <div class="form-group">
     Name: <input type="text" class="form-control" value = "<%= @shoe.name %>" name="name" >
    </div>
   <div>
     
   <div class="form-group">
     Price: <input type="text" class="form-control" value = "<%= @shoe.price %>" name="price">
    </div>
   <div>
     
   <div class="form-group">
     Image: <input type="url" class="form-control" value = "<%= @shoe.image %>" name="image">
    </div>
   <div>
    
   <div class="form-group">
     Description: <input type="text" class="form-control" value = "<%= @shoe.description %>" name="description">
    </div>
   
   <input type="submit" class="btn btn-default" value="Edit Shoe">
  <% end %>
<a href="/shoes">Back To Home Page</a>